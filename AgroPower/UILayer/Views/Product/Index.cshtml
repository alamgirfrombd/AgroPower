@using AgroPower.DTOs


@{
    ViewData["Title"] = "Product List";
}
<div class="container mt-4">
    <h2>All Products</h2>
    <a href="/Product/Create" class="btn btn-primary mb-2">+ Add New Product</a>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a href="/Product/Edit/@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Product/Delete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        <a href="/Product/Details/@item.Id" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
