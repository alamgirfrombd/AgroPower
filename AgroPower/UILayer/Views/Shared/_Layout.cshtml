<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Agrogami Power House">
    <title>@ViewData["Title"]"Agrogami Power House"</title>

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>


<body>
    <!-- Sidebar Toggle Button -->
    <button class="menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false" id="menuToggle">
        <i class="bi bi-list" aria-hidden="true"></i>
    </button>

    <!-- Sidebar Menu -->
    <aside class="sidebar" id="sidebar" aria-label="Main navigation">

        <div class="sidebar-header">
            <a class="sidebar-brand" href="/" style="padding-left: 30px;"></a>
        </div>


        <ul class="nav-list">
            <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link"><i class="bi bi-house"></i> Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link"><i class="bi bi-shield-lock"></i> Privacy</a></li>
            <li>
                <button class="submenu-toggle" aria-expanded="false" aria-controls="submenu1" data-submenu="submenu1">
                    <i class="bi bi-gear"></i> Inventory <i class="bi bi-chevron-down toggle-icon"></i>
                </button>
                <ul class="submenu" id="submenu1" aria-label="Menu Setting submenu">
                   <a asp-area="" asp-controller="Product" asp-action="Index" class="nav-link">Product List</a>
                   <a asp-area="" asp-controller="" asp-action="Index" class="nav-link">Leave Types</a>
                   <a asp-area="" asp-controller="" asp-action="Index" class="nav-link">Core Period</a>
                   <a asp-area="" asp-controller="" asp-action="Index" class="nav-link">Company List</a>
                </ul>
            </li>

            <li>
                <button class="submenu-toggle" aria-expanded="false" aria-controls="submenu2" data-submenu="submenu2">
                    <i class="bi bi-bar-chart"></i> Data Analysis <i class="bi bi-chevron-down toggle-icon"></i>
                </button>
                <ul class="submenu" id="submenu2" aria-label="Data Analysis submenu">
                    <li><a asp-area="" asp-controller="CompanyNotice" asp-action="Index" class="nav-link">Company Notices</a></li>
                </ul>
            </li>
        </ul>
    </aside>

    <!-- Main Content Area -->
    <div class="content" id="content">
        <header class="main-header">
            <h1 class="main-title" style="padding-left: 30px;>@ViewData["Title"]AgroPower</h1>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer border-top text-muted">
            <div class="container">
                © 2025 - Agrogami Power House - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

    </div>

    <!-- JavaScript -->
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const content = document.getElementById("content");
            const toggle = document.getElementById("menuToggle");
            const isActive = sidebar.classList.toggle("active");
            content.classList.toggle("shifted", isActive);
            toggle.setAttribute("aria-expanded", isActive);
            toggle.querySelector("i").classList.toggle("bi-list", !isActive);
            toggle.querySelector("i").classList.toggle("bi-x", isActive);
            localStorage.setItem("sidebarOpen", isActive);
        }

        function toggleSubMenu(submenuId) {
            const submenu = document.getElementById(submenuId);
            const button = submenu.previousElementSibling;
            const isOpen = submenu.classList.toggle("show");
            button.setAttribute("aria-expanded", isOpen);
            button.querySelector(".toggle-icon").classList.toggle("bi-chevron-down", !isOpen);
            button.querySelector(".toggle-icon").classList.toggle("bi-chevron-up", isOpen);
            localStorage.setItem(`submenu_${submenuId}`, isOpen);
        }

        document.addEventListener("DOMContentLoaded", () => {
            const sidebarOpen = localStorage.getItem("sidebarOpen") === "true";
            const sidebar = document.getElementById("sidebar");
            const content = document.getElementById("content");
            const toggle = document.getElementById("menuToggle");

            if (sidebarOpen) {
                sidebar.classList.add("active");
                content.classList.add("shifted");
                toggle.setAttribute("aria-expanded", "true");
                toggle.querySelector("i").classList.replace("bi-list", "bi-x");
            }

            ["submenu1", "submenu2"].forEach(id => {
                const isOpen = localStorage.getItem(`submenu_${id}`) === "true";
                if (isOpen) {
                    const submenu = document.getElementById(id);
                    submenu.classList.add("show");
                    const button = submenu.previousElementSibling;
                    button.setAttribute("aria-expanded", "true");
                    button.querySelector(".toggle-icon").classList.replace("bi-chevron-down", "bi-chevron-up");
                }
            });

            document.getElementById("menuToggle").addEventListener("click", toggleSidebar);
            document.querySelectorAll(".submenu-toggle").forEach(button => {
                button.addEventListener("click", () => toggleSubMenu(button.getAttribute("data-submenu")));
            });
        });
    </script>

 

  
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Bundle JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

